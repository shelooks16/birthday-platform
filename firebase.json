{
  "functions": [
    {
      "source": "apps/functions/build",
      "codebase": "birthday",
      "ignore": ["node_modules", ".git"],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\"/.. run lint",
        "npm --prefix \"$RESOURCE_DIR\"/.. run build"
      ]
    }
  ],
  "firestore": {
    "indexes": "firebase-setup/firestore.indexes.json",
    "rules": "firebase-setup/firestore.rules"
  },
  "emulators": {
    "ui": {
      "port": 4000,
      "enabled": true
    },
    "firestore": {
      "port": 8080
    },
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    }
  }
}
