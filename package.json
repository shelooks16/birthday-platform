{
  "name": "birthday",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,md}\"",
    "emulators": "npx wait-on apps/functions/build/package.json && sh firebase-emulators.sh",
    "setup-env": "sh setup-env.sh",
    "export-indexes": "firebase firestore:indexes > firestore.indexes.json"
  },
  "devDependencies": {
    "eslint-config-base": "*",
    "prettier": "2.8.7",
    "turbo": "1.8.6",
    "wait-on": "^7.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
